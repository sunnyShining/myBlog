@media screen and (min-width: 960px)
  .editorSet
    width 100%
  .editorSet .editor
    height 450px
    width 48%
    overflow-y hidden
    background-color rgb(44, 52, 55)
    float left

@media screen and (max-width: 959px)
  .editorSet
    width 100%
  .editorSet .editor
    height 450px
    width 100%
    overflow-y hidden
    background-color rgb(44, 52, 55)
.NightTheme
  .editorSet
    .editor
      -webkit-box-shadow inset 0 1px 3px rgb(22, 26, 27)
      -moz-box-shadow inset 0 1px 3px rgb(22, 26, 27)
      box-shadow inset 0 1px 3px rgb(22, 26, 27)
.label
  background rgba(230, 230, 230, 0.5)
  height 20px
  padding 0 6px
  line-height 20px
  z-index 999
  text-align center
  font-size 12px
  color #bbb
  border-radius 3px
.editor
  iframe
    border 0 !important
    min-height 100px
    min-width 100px
    height 100%
    width 100%
.submit-btn
  color #fff
  background-color #67c23a
  display inline-block
  line-height 1
  white-space nowrap
  cursor pointer
  border 1px solid #67c23a
  -webkit-appearance none
  text-align center
  box-sizing border-box
  outline none
  margin 0
  transition .1s
  -moz-user-select none
  -webkit-user-select none
  -ms-user-select none
  padding 12px 20px
  font-size 14px
  border-radius 4px
  margin-bottom 2px
.edit-area
    height 85%
